    footer{background:#222;color:white;text-align:center;padding:15px;margin-top:40px;font-size:0.9rem;}
    button{background:#0073e6;color:white;border:none;padding:10px 20px;margin-top:20px;cursor:pointer;border-radius:6px;font-size:1rem;transition:0.3s;}
